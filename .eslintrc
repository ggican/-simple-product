{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true
        }
    },
    "extends": [
        "google",
        "eslint:recommended",
        "prettier",
        "prettier/react",
        "prettier/standard"
    ],
    "plugins": ["prettier", "react-hooks"],
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jest": true
    },
    "globals": {
        "shallow": true,
        "render": true,
        "mount": true,
        "toJson": true
    },
    "rules": {
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn",
        "prettier/prettier": "error",
        "object-curly-spacing": ["error", "always"],
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "no-use-before-define": ["error", { "functions": false }],
        "no-console": 1,
        "no-unused-vars": 0,
        "import/no-extraneous-dependencies": 0,
        "import/no-unresolved": 0,
        "import/extensions": 0,
        "jsx-a11y/label-has-for": [
            2,
            {
                "required": {
                    "some": ["nesting", "id"]
                }
            }
        ]
    }
}
